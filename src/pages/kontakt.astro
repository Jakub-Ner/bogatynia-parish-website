        </div>
      </div>
    </div>
  </section>
  
  <!-- Map Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Lokalizacja i dojazd</h2>
      </div>
      
        <div class="bg-gray-200 rounded-lg overflow-hidden h-96">
