---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import SermonList from "../components/Sections/SermonList.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection
    title="Parafia Św. Marii Magdaleny"
    subtitle="Najstarsza parafia w Bogatyni - miejsce modlitwy, wspólnoty i duchowego wzrostu"
    backgroundImage="/uploads/hero-bg.webp"
    ctaText="Odwiedź Nas"
    ctaLink="/kontakt"
    secondaryCtaText="Działania"
    secondaryCtaLink="/dzialania"
  />
  
  <!-- Msze Święte -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Msze Święte</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Niedziela</h3>
            <div class="space-y-2">
              <p class="text-lg font-bold text-primary-600">8:00</p>
              <p class="text-lg font-bold text-primary-600">11:00</p>
              <p class="text-lg font-bold text-primary-600">17:00</p>
            </div>
            <p class="text-sm text-gray-600 mt-2">Kościół MB Królowej Polski</p>
          </div>

          <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Dni powszednie</h3>
            <p class="text-lg font-bold text-primary-600 mb-2">17:00</p>
            <p class="text-gray-600 mb-2">Soboty: 9:00</p>
            <p class="text-sm text-gray-500 italic">We wtorki nie ma Mszy</p>
          </div>

          <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Zatonie Wieś</h3>
            <p class="text-lg font-bold text-primary-600 mb-2">9:30</p>
            <p class="text-sm text-gray-500 italic">Nie ma w lipcu i sierpniu</p>
          </div>
        </div>

        <div class="bg-blue-50 p-6 rounded-lg mb-8">
          <h4 class="font-bold mb-2">Spowiedź</h4>
          <p class="text-gray-700">Każdy piątek miesiąca o 16:30. Zawsze przed Mszą Świętą</p>
        </div>

        <Button href="/msze-swiete" variant="outline">
            Zobacz szczegóły
        </Button>
      </div>
    </div>
  </section>
  
  <!-- O Parafii -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="/parafia.jpg"
            alt="Kościół Matki Bożej Królowej Polski w Bogatyni"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">O Naszej Parafii</h2>
          <p class="text-gray-700 mb-6 text-lg">
            Parafia Św. Marii Magdaleny w Bogatyni to najstarsza parafia w mieście, erygowana w 1201 roku.
            Znajdujemy się w dekanacie bogatyńskim w Diecezji Legnickiej.
          </p>
          <p class="text-gray-700 mb-6 text-lg">
            Obecnie funkcje kościoła parafialnego pełni kościół Matki Bożej Królowej Polski wzniesiony w 1989 roku,
            po spaleniu w 2011 roku dawnego kościoła późnobarokowo-klasycystycznego z 1796 roku.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            Proboszczem jest ks. kan. Aleksander M. Leszczyński. Zapraszamy wszystkich do udziału
            w życiu naszej wspólnoty parafialnej.
          </p>

          <Button href="/historia">
            Historia Parafii
          </Button>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Ogłoszenia Parafialne -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Ogłoszenia Parafialne</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Najważniejsze informacje z życia parafii
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="card p-8 mb-6">
          <h3 class="text-xl font-bold mb-3">Bieżące ogłoszenia</h3>
          <p class="text-gray-700 mb-4">
            Aktualne ogłoszenia parafialne będą tutaj publikowane. Zapraszamy do regularnego odwiedzania tej sekcji.
          </p>
          <Button href="/ogloszenia" variant="outline">
            Zobacz wszystkie ogłoszenia
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Ministries Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Działalność Parafialna</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Poznaj różne formy działalności w naszej parafii
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Caritas Parafialny</h3>
          <p class="text-gray-700 mb-4">
            Działalność charytatywna i pomoc potrzebującym w naszej wspólnocie.
          </p>
          <a href="/caritas" class="text-primary-600 font-medium hover:text-primary-700">
            Dowiedz się więcej →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-secondary-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Świetlica Parafialna</h3>
          <p class="text-gray-700 mb-4">
            Miejsce spotkań dla dzieci i młodzieży, zajęcia edukacyjne i rekreacyjne.
          </p>
          <a href="/swietlica" class="text-primary-600 font-medium hover:text-primary-700">
            Dowiedz się więcej →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-accent-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Pogłębianie Wiary</h3>
          <p class="text-gray-700 mb-4">
            Grupy modlitewne, rekolekcje i inne formy duchowego rozwoju.
          </p>
          <a href="/poglebienie-wiary" class="text-primary-600 font-medium hover:text-primary-700">
            Dowiedz się więcej →
          </a>
        </div>
      </div>
      
    </div>
  </section>
  
  <!-- Call to Action -->
  <section 
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/thank-you-bg.webp)"
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Dołącz do Naszej Wspólnoty</h2>
        <p class="text-xl mb-8">
        Serdecznie zapraszamy Cię do naszej rodziny parafialnej. <br>
        Odwiedź nas w niedzielę lub skontaktuj się z nami.
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/msze-swiete" variant="primary" size="lg">
            Msze Święte
          </Button>

          <Button href="/kontakt" variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
            Kontakt
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
