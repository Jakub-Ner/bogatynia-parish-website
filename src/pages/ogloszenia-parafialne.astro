---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import { fetchAnnouncement } from "../utils/announcements";
import { marked } from 'marked';
import { getEntry } from 'astro:content';

// Enable server-side rendering for this page (opt-out of static generation)
export const prerender = false;

// Calculate seconds until next Sunday morning (when announcements change)
function getSecondsUntilNextSunday(): number {
  const now = new Date();
  const dayOfWeek = now.getDay(); // 0 = Sunday, 6 = Saturday
  const daysUntilSunday = dayOfWeek === 0 ? 7 : 7 - dayOfWeek;

  const nextSunday = new Date(now);
  nextSunday.setDate(now.getDate() + daysUntilSunday);
  nextSunday.setHours(6, 0, 0, 0); // 6 AM Sunday

  return Math.max(60, Math.floor((nextSunday.getTime() - now.getTime()) / 1000));
}

// Set ISR cache headers - page will be cached until next Sunday
const revalidateSeconds = getSecondsUntilNextSunday();
Astro.response.headers.set('CDN-Cache-Control', `public, s-maxage=${revalidateSeconds}, stale-while-revalidate=86400`);

// Fetch the current announcement from Vercel Blob Storage
const currentAnnouncement = await fetchAnnouncement();

// Convert markdown to HTML
const htmlContent = marked(currentAnnouncement.content);

// Fetch the wypominki content from the announcements collection
const wypominkiEntry = await getEntry('announcements', 'wypominki');
const wypominkiHtml = wypominkiEntry ? marked(wypominkiEntry.body) : '';
---

<BaseLayout
  title="Ogłoszenia Parafialne - Parafia Św. Marii Magdaleny"
  description="Najważniejsze ogłoszenia i informacje z życia parafii Św. Marii Magdaleny w Bogatyni."
>
  <PageHeader
    title="Ogłoszenia Parafialne"
    subtitle="Aktualne informacje z życia parafii"
    backgroundImage="/uploads/page-header-bg.webp"
  />

  <section class="py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">

        <!-- Bieżące ogłoszenia -->
        <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
              </svg>
            </div>
            <div>
              <!-- <h2 class="text-2xl font-bold">{currentAnnouncement.data.title}</h2> -->
              <p class="text-gray-600">
                Aktualne od {currentAnnouncement.data.date.toLocaleDateString('pl-PL', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </p>
            </div>
          </div>

          <div class="prose prose-lg max-w-none prose-headings:text-primary-800 prose-h2:bg-primary-50 prose-h2:p-4 prose-h2:rounded-lg prose-h3:text-primary-700 prose-h3:bg-primary-25 prose-h3:p-3 prose-h3:rounded prose-strong:text-primary-700 prose-a:text-primary-600 hover:prose-a:text-primary-700">
            <div set:html={htmlContent} />
          </div>
        </div>

        <!-- Wypominki section -->
        {wypominkiEntry && (
          <div class="bg-white rounded-lg shadow-lg p-8">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold">{wypominkiEntry.data.title}</h2>
                <p class="text-gray-600">
                  Opublikowano {wypominkiEntry.data.date.toLocaleDateString('pl-PL', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </p>
              </div>
            </div>

            <div class="prose prose-lg max-w-none prose-headings:text-primary-800 prose-h2:bg-primary-50 prose-h2:p-4 prose-h2:rounded-lg prose-h3:text-primary-700 prose-h3:bg-primary-25 prose-h3:p-3 prose-h3:rounded prose-strong:text-primary-700 prose-a:text-primary-600 hover:prose-a:text-primary-700 prose-table:w-full prose-th:text-left prose-th:border-b-2 prose-th:border-primary-200 prose-th:pb-2 prose-td:border-b prose-td:border-gray-200 prose-td:py-2">
              <div set:html={wypominkiHtml} />
            </div>
          </div>
        )}

      </div>
    </div>
  </section>
</BaseLayout>
